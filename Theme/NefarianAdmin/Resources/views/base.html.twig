<!DOCTYPE html>
<html lang="en">
<head>

    {% if form|default(false) %}
        {% form_theme form 'NefarianCmsBundle:Admin:Form/fields.html.twig' %}
    {% endif %}

    <title>LineStorm CMS Admin Panel</title>

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">

    <!-- START META -->
    {% block head_meta %}

    {% endblock %}
    <!-- END META -->

    <!-- START STYLESHEETS -->
    {% stylesheets
        filter="compass" output="/css/cms/core/main.css"
        "@theme_nefarian_admin/Resources/assets/sass/main.scss"
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% block head_stylesheets %}

    {% endblock %}
    <!-- END STYLESHEETS -->

    <!-- START JAVASCRIPTS -->
    <script type="text/javascript">
        window.Nefarian = {};
    </script>
    <script type="text/javascript" src="/vendor/requirejs/require.js"></script>
    {% javascripts
        filter='uglifyjs2' output = '/js/cms/core/main.js'
        "@theme_nefarian_admin/Resources/assets/js/main.js"
    %}
    {% endjavascripts %}
    {% block head_javascripts %}
        {{
            include('NefarianCmsBundle::requirejs.html.twig', {
                requirejs_module: ['cms/core/main']
            })
        }}
    {% endblock %}
    <!-- END JAVASCRIPTS -->

    <!-- Favicon -->
    <link rel="shortcut icon" href="/img/favicon/favicon.png">
</head>

<body>

<div class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">

    <div class="container">
        <!-- Menu button for smallar screens -->
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar">
              </span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#" class="navbar-brand">{% block header %}Nefarian{% endblock %}</span></a>
        </div>
        <!-- Site name for smallar screens -->


        <!-- Navigation starts -->
        <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">

            <!-- Notifications -->
            <ul class="nav navbar-nav navbar-right">

                {% if app.user %}
                    <li class="dropdown">
                        <a class="dropdown-toggle" href="" data-toggle="dropdown">
                            <i class="icon-user"></i> {{ app.user.username | capitalize }}
                        </a>

                        <ul class="dropdown-menu">
                            <li><a href="{{ path('fos_user_profile_edit') }}"><i class="icon-user"></i> Profile</a></li>
                            <li><a href="#"><i class="icon-cogs"></i> Settings</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}"><i class="icon-off"></i> Logout</a></li>
                        </ul>
                    </li>
                {% endif %}
            </ul>

        </nav>

    </div>

</div>


<!-- Main content starts -->

<div class="content" ng-controller="WebSocketCtrl">

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-dropdown"><a href="#">Navigation</a></div>

        <div class="sidebar-inner">

            <!--- Sidebar navigation -->
            <!-- If the main navigation has sub navigation, then add the class "has_submenu" to "li" of main navigation. -->
            <ul id="main-menu-navigation" class="navi">
                {% block nav %}

                {% endblock %}
            </ul>

        </div>

    </div>

    <!-- Sidebar ends -->

    <!-- Main bar -->
    <div class="mainbar">

        <div class="page-head ng-scope">
            <h2 class="pull-left">
                {% block page_title %}{% endblock %}
                <span class="page-meta">{% block page_desc %}{% endblock %}</span>
            </h2>

            <!-- Breadcrumb -->
            <ol class="breadcrumb pull-right">
                <li><a href="{# { url('linestorm_cms_admin_index') } #}"><i class="fa-home"></i> Home</a></li>
                {% block breadcrumbs %}{% endblock %}
            </ol>
            <div class="clearfix"></div>
        </div>



        <!-- Matter -->
        <div class="matter">
            <div class="container-fluid">
                <div class="row-fluid">
                    <!-- Content -->
                    <div class="container">
                        {% block body %}
                            That's a paddlin'
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Mainbar ends -->
    <div class="clearfix"></div>

</div>
<!-- Content ends -->

<!-- Scroll to top -->
<span class="totop"><a href="#"><i class="icon-chevron-up"></i></a></span>
