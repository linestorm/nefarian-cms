{% extends '@theme/Security/layout.html.twig' %}

{% block login_info %}
    <div class="footer">
        <a href="{{ url('fos_user_registration_register') }}" class="btn btn-success">Register</a>
    </div>
{% endblock %}


{% block fos_user_content %}

    {% if error %}
        <div class="alert-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group w-icon">
            <input type="text" name="_username" id="username" class="form-control input-lg" value="{{ last_username }}" placeholder="Username or email">
            <span class="fa fa-user signin-form-icon"></span>
        </div>

        <div class="form-group w-icon">
            <input type="password" name="_password" id="password" class="form-control input-lg" placeholder="Password">
            <span class="fa fa-lock signin-form-icon"></span>
        </div>

        <div class="form-group w-icon">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
        </div>

        <div class="form-actions">
            <input type="submit" value="SIGN IN" class="signin-btn bg-primary" name="_submit" id="_submit">
            <a href="{{ url('fos_user_resetting_request') }}" class="forgot-password" id="forgot-password-link">Forgot your password?</a>
        </div>
    </form>
{% endblock %}
