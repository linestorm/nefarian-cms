{% extends 'LineStormMediaBundle:Category:form.html.twig' %}

{% block page_title %}New Media Category{% endblock %}
{% block page_desc %}{% endblock %}

{% block module_bread %}
    <li><a href="#" class="active">New Category</a></li>
{% endblock %}

{% block module %}

    {{ form_start(form, {attr: { class: 'media-api-save', 'data-count': 0 } }) }}
        {{ form_row(form.name) }}

        <div class="form-group">
            {{ form_label(form.parent) }}
            <div class="col-sm-10">
                {{ form_widget(form.parent) }}
                {{
                    include('LineStormMediaBundle:Form:multiple.html.twig', {
                        input: '#linestorm_cms_form_media_category_parent'
                    })
                }}
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-12">

                <button type="submit" class="btn btn-default" data-url="{{ url('linestorm_cms_module_media_api_post_category') }}">
                    <i class="fa-save"></i> Save
                </button>
            </div>
        </div>

        {{ form_widget(form.media) }}
    {{ form_end(form) }}
{% endblock %}
