{% extends 'LineStormMediaBundle:Admin:form.html.twig' %}

{% block page_title %}Edit Media{% endblock %}
{% block page_desc %}{% endblock %}

{% block media_form_buttons %}
    <button type="button" class="btn btn-danger media-form-delete" data-url="{{ path
    ('linestorm_cms_module_media_api_delete_media', {id: image.id}) }}">
        <i class="fa-trash-o"></i> Delete
    </button>
{% endblock %}

{% block module_bread %}
    <li><a href="#" class="active">Edit Media</a></li>
{% endblock %}

{% block module %}

    {{ form_start(form, {attr: {class: 'media-api-save'} }) }}
        <div class="thumbnail">
            <img src="{{ form.src.vars.value }}">
        </div>
        {{ form_row(form.title) }}
        {{ form_row(form.alt) }}
        {{ form_row(form.credits) }}

        <div class="form-group">
            <button type="submit" class="btn btn-default media-api-save" data-url="{{ url('linestorm_cms_module_media_api_put_media', {id: image.id}) }}">
                <i class="fa-save"></i> Save
            </button>
            <button type="button" class="btn btn-danger api-delete" data-url="{{ url('linestorm_cms_module_media_api_delete_media', {id: image.id}) }}">
                <i class="fa-trash-o"></i> Delete
            </button>
        </div>
    {{ form_end(form) }}
{% endblock %}
