{{ form_start(form) }}

    <div class="panel">
        <div class="panel-body">
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}

            {{ form_rest(form) }}

        </div>
        <div class="panel-footer text-right">
            {% if category|default(false) %}
                <a href="{{ url('nefarian_api_field_file_delete_category', {id: category.id}) }}" class="btn btn-danger pull-left api-delete">
                    <i class="fa-trash"></i> Delete
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-save"></i> Update
                </button>
            {% else %}
                <button type="submit" class="btn btn-primary">
                    <i class="fa-plus"></i> Create
                </button>
            {% endif %}
            <a href="{{ url('nefarian_plugin_field_file_categories') }}" class="btn btn-default">
                Cancel
            </a>
        </div>
    </div>

{{ form_end(form) }}
