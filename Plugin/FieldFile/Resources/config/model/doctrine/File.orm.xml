<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Nefarian\CmsBundle\Plugin\FieldFile\Model\File" table="file">
        <field name="name" type="filename" length="150" column="filename" nullable="false" />
        <field name="name" type="path" length="255" column="path" nullable="false" />
        <field name="name" type="url" length="255" column="url" nullable="false" />

        <field name="size" type="integer" column="size" nullable="false" />
        <field name="status" type="integer" column="status" nullable="false" />


        <field name="created" type="datetime" column="created" nullable="false"/>
        <field name="editedOn" type="datetime" column="edited" nullable="true"/>
    </mapped-superclass>

</doctrine-mapping>
