{% extends 'LineStormFileBundle:Category:form.html.twig' %}

{% block page_title %}Edit File Category{% endblock %}
{% block page_desc %}{% endblock %}

{% block module_bread %}
    <li><a href="#" class="active">Edit Category</a></li>
{% endblock %}

{% block module %}

    {{ form_start(form, {attr: { class: 'file-api-save', 'data-count': category.file|length, 'data-category-id': category.id } }) }}
        {{ form_row(form.name) }}

        <div class="form-group">
            {{ form_label(form.parent) }}
            <div class="col-sm-10">
                {{ form_widget(form.parent) }}

                {% set parent_node = null %}
                {% if category.parent != null %}
                    {% set parent_node = category.parent.id %}
                {% endif %}

                {{
                    include('LineStormFileBundle:Form:multiple.html.twig', {
                        flat: true,
                        init_node: parent_node,
                        exclude_nodes: category.id,
                        input: '#linestorm_cms_form_file_category_parent'
                    })
                }}
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-12">

                <button type="submit" class="btn btn-default" data-url="{{ url('linestorm_cms_module_file_api_put_category', {id: category.id}) }}">
                    <i class="fa-save"></i> Save
                </button>

                <button type="button" class="btn btn-danger file-form-delete" data-url="{{ path('linestorm_cms_module_file_api_delete_category', {id: category.id}) }}">
                    <i class="fa-trash-o"></i> Delete
                </button>
            </div>
        </div>

        {{ form_widget(form.file) }}
    {{ form_end(form) }}
{% endblock %}
