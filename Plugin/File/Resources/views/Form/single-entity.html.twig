
<div class="form-group">
        {{ form_label(form) }}
    <div class="col-sm-10">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="text" placeholder="Search File..." class="form-control file-search">
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <button type="button" class="btn btn-link new-file" data-url="{{ url('linestorm_cms_module_file_api_new_file') }}">
                    <i class="fa-cloud-upload"></i> Upload File
                </button>
            </div>
        </div>

        <div class="image-preview-container thumbnail">
            <img src="{% if file %}{{ file.src }}{% endif %}" class="{{ form.vars.id }}_preview" />
        </div>

        {{ form_widget(form) }}

    </div>
</div>
