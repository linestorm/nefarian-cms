{% extends '@plugin_content_management/ContentType/edit.html.twig' %}
{% set selected_tab = 'form' %}
{% set page_modules = ['cms/content_management/type/form_view'] %}

{% block breadcrumbs %}
    {{ parent() }}
    <li><a href="#">Fields</a></li>
    <li><a href="#">{{ contentTypeField.label }}</a></li>
    <li class="active">{{ contentTypeField.viewWidget.label }}</li>
{% endblock %}

{% block tab %}

    <h3>{{ contentTypeField.viewWidget.label }} Settings</h3>

    {{ form_start(form) }}
        {{ form_rest(form) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa-save"></i> Save
        </button>
    {{ form_end(form) }}

{% endblock %}
