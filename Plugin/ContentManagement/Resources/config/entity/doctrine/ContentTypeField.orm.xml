<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Nefarian\CmsBundle\Plugin\ContentManagement\Entity\ContentTypeField" table="content_type_field">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <one-to-one field="viewDisplay" target-entity="ContentTypeFieldDisplay" inversed-by="typeField"  orphan-removal="true">
        </one-to-one>
        <one-to-one field="viewWidget" target-entity="ContentTypeFieldWidget" inversed-by="typeField" orphan-removal="true">
        </one-to-one>

        <one-to-many target-entity="NodeContent" mapped-by="fieldType" field="contents" orphan-removal="true">
        </one-to-many>

        <many-to-one target-entity="ContentType" field="contentType" inversed-by="typeFields" orphan-removal="true">
        </many-to-one>
        <many-to-one target-entity="Field" field="field" inversed-by="typeFields" orphan-removal="true">
        </many-to-one>


    </entity>
</doctrine-mapping>
