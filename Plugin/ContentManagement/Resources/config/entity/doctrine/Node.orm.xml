<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Nefarian\CmsBundle\Plugin\ContentManagement\Entity\Node" table="node">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="editedOn" type="datetime" column="edited_on" nullable="true">
            <gedmo:timestampable on="update" />
        </field>

        <field name="createdOn" type="datetime" column="created_on" nullable="false">
            <gedmo:timestampable on="create" />
        </field>

        <one-to-many target-entity="Nefarian\CmsBundle\Plugin\ContentManagement\Entity\NodeContent" field="contents" mapped-by="node" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one target-entity="Nefarian\CmsBundle\Plugin\ContentManagement\Entity\ContentType" field="contentType">
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>

        <many-to-one target-entity="Nefarian\CmsBundle\Entity\User" field="editedBy">
            <gedmo:blameable on="update" />
        </many-to-one>

        <many-to-one target-entity="Nefarian\CmsBundle\Entity\User" field="createdBy">
            <gedmo:blameable on="create" />
        </many-to-one>

        <gedmo:soft-deleteable field-name="deletedOn" />

    </entity>
</doctrine-mapping>
