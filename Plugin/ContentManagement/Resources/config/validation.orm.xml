<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

  <class name="Nefarian\CmsBundle\Plugin\ContentManagement\Model\ContentType">

    <property name="name">
      <constraint name="NotNull"/>
      <constraint name="Length">
        <option name="min">3</option>
        <option name="max">100</option>
        <option name="minMessage">Name must be at least {{ limit }} characters in length</option>
        <option name="maxMessage">Name cannot be longer than {{ limit }} characters in length</option>
      </constraint>
    </property>

    <property name="typeFields">
      <constraint name="Valid"/>
      <!--<constraint name="Count">
        <option name="min">1</option>
        <option name="minMessage">You must specify at least one field</option>
      </constraint>-->
    </property>

  </class>

  <class name="Nefarian\CmsBundle\Plugin\ContentManagement\Model\ContentTypeField">

    <property name="name">
      <constraint name="NotNull"/>
      <constraint name="Length">
        <option name="min">5</option>
        <option name="max">25</option>
        <option name="minMessage">Field name must be at least {{ limit }} characters in length</option>
        <option name="maxMessage">File name cannot be longer than {{ limit }} characters in length</option>
      </constraint>
      <constraint name="Regex">
        <option name="pattern">/[a-z_]+/</option>
        <option name="message">Field name must be lower case alphabetic with underscores</option>
      </constraint>
      <constraint name="Regex">
        <option name="pattern">/^[a-z]/</option>
        <option name="message">Field name must start with a lower case alphabetic character</option>
      </constraint>
    </property>

  </class>

</constraint-mapping>
